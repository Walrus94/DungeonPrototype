{
  "id": null,
  "uid": "java21-vt-metrics",
  "title": "Dungeon Java 21 Virtual Threads & Structured Task Metrics",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "thread_group",
        "label": "Thread Group",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "PBFA97CFB590B2093"
        },
        "query": "label_values(jfr_event_threads_live_count, thread_group)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "options": []
      },
      {
        "name": "thread",
        "label": "Thread",
        "type": "query",
        "query": "label_values({job=\"java-app-logs\"}, thread)",
        "definition": "label_values({job=\"java-app-logs\"}, thread)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "options": []
      }
    ]
  },
  "panels": [
    {
      "title": "Active Virtual Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jfr_event_threads_live_count{thread_group=~\"$thread_group\"}",
          "legendFormat": "Active Virtual Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "title": "Threads Started (Rate)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "rate(jfr_event_threads_started_count{thread_group=~\"$thread_group\"}[1m])",
          "legendFormat": "New Threads/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads/s"
        }
      }
    },
    {
      "title": "Loki - Virtual Thread Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "expr": "{job=\"java-app-logs\", thread=~\"$thread\"} |= \"VirtualThread\""
        }
      ]
    },
    {
      "title": "Loki - Thread Stack Traces",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "expr": "{job=\"java-app-logs\", thread=~\"$thread\"} |= \"java.lang.Thread.getStackTrace\""
        }
      ]
    }
  ]
}
