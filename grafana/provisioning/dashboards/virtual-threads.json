{
  "id": null,
  "uid": "java21-vt-metrics",
  "title": "Dungeon Java 21 Virtual Threads & Structured Task Metrics",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": []
  },
  "panels": [
    {
      "title": "Live Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_live",
          "legendFormat": "Live Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "title": "Daemon Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_daemon",
          "legendFormat": "Daemon Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads"
        }
      }
    },
    {
      "title": "Peak Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_peak",
          "legendFormat": "Peak Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads"
        }
      }
    },
    {
      "title": "Threads by State",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_states",
          "legendFormat": "{{state}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads"
        }
      }
    },
    {
      "name": "thread",
      "label": "Thread",
      "type": "query",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "query": "label_values(thread)",
      "refresh": 2,
      "includeAll": true,
      "allValue": ".*",
      "current": {
        "text": "All",
        "value": ".*"
      }
    }
  ]
}
