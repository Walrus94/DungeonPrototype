{
  "id": null,
  "uid": "java21-vt-metrics",
  "title": "Dungeon Java 21 Virtual Threads & Structured Task Metrics",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "current": {
          "text": "",
          "value": ""
        },
        "datasource": "PBFA97CFB590B2093",
        "includeAll": false,
        "label": "Application",
        "name": "application",
        "options": [],
        "query": "label_values(application)",
        "refresh": 2,
        "regex": "",
        "type": "query"
      },
      {
        "current": {
          "text": "",
          "value": ""
        },
        "datasource": "PBFA97CFB590B2093",
        "includeAll": false,
        "label": "Instance",
        "name": "instance",
        "options": [],
        "query": "label_values(jvm_memory_used_bytes{application=\"$application\"}, instance)",
        "refresh": 2,
        "regex": "",
        "type": "query"
      },
      {
        "name": "thread",
        "label": "Thread",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "P8E80F9AEF21F6940"
        },
        "query": "label_values({application=\"$application\"}, thread)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        },
        "options": []
      }
    ]
  },
  "panels": [
    {
      "title": "Live Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Live Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "title": "Daemon Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_daemon_threads",
          "legendFormat": "Daemon Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads"
        }
      }
    },
    {
      "title": "Peak Threads",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_peak_threads",
          "legendFormat": "Peak Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads"
        }
      }
    },
    {
      "title": "Threads by State",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "jvm_threads_states_threads",
          "legendFormat": "{{state}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "threads"
        }
      }
    },
    {
      "title": "Logs by Selected Thread",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "P8E80F9AEF21F6940"
      },
      "targets": [
        {
          "expr": "{job=\"java-app-logs\", thread=~\"$thread\"} |= \"VirtualThread\""
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": false,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      }
    }
  ]
}
